{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/app": ["app/index.ts"],
      "@/events/*": ["app/events/*"],
      "@/settings": ["app/settings.ts"],
      "@/utils/*": ["app/utils/*"]
    }
  },
  "include": ["app/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
