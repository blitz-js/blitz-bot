{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["types.d.ts", "app/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
